<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".admin_view_student">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="10dp"
                android:background="#E29696" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Details"
                android:layout_marginTop="70dp"
                android:textAlignment="center"
                android:textSize="35dp"
                android:background="@drawable/borderedittext"
                android:textStyle="italic"
                android:fontFamily="serif-monospace"
                android:textAllCaps="true"
                android:id="@+id/ss"
                android:textColor="#FF9800"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/ss"
                android:layout_height="10dp"
                android:background="#E29696"
                android:id="@+id/r1"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ss"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/borderedittext"
                android:hint="Enter Roll No"
                android:textStyle="italic"
                android:textSize="25dp"
                android:inputType="text"
                android:maxLength="20"
                android:id="@+id/vroll"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ss"
                android:layout_toRightOf="@id/vroll"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/borderedittext"
                android:text="Fetch"
                android:textSize="22dp"
                android:textStyle="italic"
                android:textAllCaps="true"
                android:textColor="#FF9800"
                android:textAlignment="center"
                android:id="@+id/vfetch"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/vroll"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:text="Name : "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:textSize="25dp"
                android:id="@+id/ss1"
                android:textColor="#FF9800"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/vfetch"
                android:layout_toRightOf="@id/ss1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/borderedittext"
                android:textSize="28dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/vname"
                android:layout_marginRight="10dp"
                android:editable="false"
                android:inputType="none"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/vname"
                android:id="@+id/r2"
                android:layout_height="10dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="20dp"
                android:text="Father : "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:textSize="25dp"
                android:layout_below="@id/r2"
                android:id="@+id/ss2"
                android:textColor="#FF9800"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ss1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/borderedittext"
                android:textSize="28dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_below="@id/r2"
                android:id="@+id/vfname"
                android:layout_marginRight="10dp"
                android:editable="false"
                android:inputType="none"/>
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/vfname"
                android:id="@+id/r3"
                android:layout_height="10dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="20dp"
                android:text="Mother : "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:textSize="25dp"
                android:layout_below="@id/r3"
                android:id="@+id/ss3"
                android:textColor="#FF9800"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/borderedittext"
                android:textSize="28dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_below="@id/r3"
                android:layout_toRightOf="@id/ss3"
                android:id="@+id/vmname"
                android:editable="false"
                android:inputType="none"
                android:layout_marginRight="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/vmname"
                android:id="@+id/r4"
                android:layout_height="10dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="20dp"
                android:text="Mobile : "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:textSize="25dp"
                android:layout_below="@id/r4"
                android:id="@+id/ss4"
                android:textColor="#FF9800"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/borderedittext"
                android:textSize="28dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_below="@id/r4"
                android:layout_toRightOf="@id/ss4"
                android:id="@+id/vmob"
                android:editable="false"
                android:inputType="none"
                android:maxLength="10"
                android:layout_marginRight="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/vmob"
                android:id="@+id/r5"
                android:layout_height="10dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="20dp"
                android:text="Address : "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:textSize="25dp"
                android:layout_below="@id/r5"
                android:id="@+id/ss5"
                android:textColor="#FF9800"/>


            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/borderedittext"
                android:textSize="28dp"
                android:textStyle="italic"
                android:textAlignment="center"
