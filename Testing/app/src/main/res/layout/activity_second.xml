<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".second">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="250px"
                android:layout_height="250px"
                android:background="@drawable/logo"
                android:id="@+id/img"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_toRightOf="@id/img"
                android:layout_marginTop="20dp"
                android:text="Admin Portal"
                android:textSize="30dp"
                android:textAllCaps="true"
                android:textColor="#F39408"
                android:background="#F3FAF9F9"
                android:textAlignment="center"
                android:textStyle="italic"
                android:fontFamily="serif-monospace"
                android:paddingTop="25dp"
                android:paddingRight="20dp"
                android:paddingLeft="30dp"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borderedittext"
                android:text="Data Entry"
                android:textSize="30dp"
                android:textColor="#F39408"
                android:backgroundTint="#232323"
                android:textAlignment="center"
                android:textStyle="italic"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/admin"
                android:layout_below="@id/img"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="100dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="30dp" />

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borderedittext"
                android:text="Study Material"
                android:textSize="30dp"
                android:textColor="#F39408"
                android:backgroundTint="#232323"
                android:textAlignment="center"
                android:textStyle="italic"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@id/admin"
                android:id="@+id/study"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="100dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borderedittext"
                android:text="Logout"
                android:textSize="30dp"
                android:textColor="#F39408"
                android:backgroundTint="#232323"
                android:textAlignment="center"
                android:textStyle="italic"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@id/study"
                android:id="@+id/logouts"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="100dp"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>