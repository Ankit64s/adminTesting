<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".admin_delete_student">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="10dp"
                android:background="#E29696" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="De-Registration of Student"
                android:textSize="35dp"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textStyle="italic"
                android:background="@drawable/borderedittext"
                android:textColor="#F39408"
                android:id="@+id/text"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/text"
                android:layout_height="10dp"
                android:background="#E29696"
                android:id="@+id/r1"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Enter Roll No"
                android:layout_below="@id/text"
                android:background="@drawable/borderedittext"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:inputType="text"
                android:maxLength="10"
                android:id="@+id/rollstu"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_toRightOf="@id/rollstu"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/borderedittext"
                android:text="Fetch"
                android:textSize="27dp"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/fetch"
                android:textColor="#F39408"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rollstu"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="Name : "
                android:textStyle="bold"
                android:textSize="26dp"
                android:id="@+id/text1"
                android:textColor="#F39408"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/fetch"
                android:layout_toRightOf="@id/text1"
                android:layout_marginTop="20dp"
                android:background="@drawable/borderedittext"
                android:textSize="25dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/namefet"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/namefet"
                android:layout_height="10dp"
                android:background="@color/colorAccent"
                android:id="@+id/r2"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/r2"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="Class : "
                android:textStyle="bold"
                android:textSize="26dp"
                android:id="@+id/text2"
                android:textColor="#F39408"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/r2"
                android:layout_toRightOf="@id/text2"
                android:layout_marginTop="20dp"
                android:background="@drawable/borderedittext"
                android:textSize="25dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/classfet"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/classfet"
                android:layout_height="10dp"
                android:background="@color/colorAccent"
                android:id="@+id/r3"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/r3"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="Section : "
                android:textStyle="bold"
                android:textSize="26dp"
                android:id="@+id/text3"
                android:textColor="#F39408"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/r3"
                android:layout_toRightOf="@id/text3"
                android:layout_marginTop="20dp"
                android:background="@drawable/borderedittext"
                android:textSize="25dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/secfet"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/secfet"
                android:layout_height="10dp"
                android:background="@color/colorAccent"
                android:id="@+id/r4"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/r4"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="Aadhar : "
                android:textStyle="bold"
                android:textSize="26dp"
                android:id="@+id/text4"
                android:textColor="#F39408"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/r4"
                android:layout_toRightOf="@id/text4"
                android:layout_marginTop="20dp"
                android:background="@drawable/borderedittext"
                android:textSize="25dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:id="@+id/adharfet"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text4"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/borderedittext"
                android:textAlignment="center"
                android:text="De-Register"
                android:textStyle="italic"
                android:textSize="30dp"
                android:id="@+id/deregister"
                android:textColor="#F39408"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>