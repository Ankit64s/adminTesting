<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".view_links_uploads">

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="10dp"
        android:background="#E29696" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="Note: If The Page Remains Blank for more than 10 seconds then kindly check your Internet Connection."
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="italic"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/borderedittext"
        android:textColor="#FF9800"/>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/text1"
        android:layout_height="10dp"
        android:background="#E29696" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clipToPadding="false"
        android:id="@+id/recyclerview2"
        android:layout_below="@id/text1"
        android:layout_marginTop="20dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>