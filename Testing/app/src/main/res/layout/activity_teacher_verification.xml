<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".teacher_verification">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="10dp"
                android:id="@+id/r1"
                android:background="#E29696" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1"
                android:layout_marginTop="10dp"
                android:text="Verify YourSelf As Teacher"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:textSize="28dp"
                android:textAlignment="center"
                android:background="@drawable/borderedittext"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="none"
                android:editable="false"
                android:id="@+id/tri"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="10dp"
                android:id="@+id/r2"
                android:layout_below="@id/tri"
                android:background="#E29696" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/borderedittext"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:hint="Enter Id"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@id/r2"
                android:inputType="number"
                android:id="@+id/verifyid"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:textSize="27dp"
                android:background="@drawable/borderedittext"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/verifyid"
                android:layout_below="@id/r2"
                android:id="@+id/verifybutton"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="28dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/verifyid"
                android:id="@+id/sn"/>
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:background="@drawable/borderedittext"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/verifyid"
                android:layout_toRightOf="@id/sn"
                android:id="@+id/verifyname"
                android:editable="false"
                android:inputType="none"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="10dp"
                android:id="@+id/r3"
                android:layout_below="@id/verifyname"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Mobile: "
                android:textSize="28dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/r3"
                android:id="@+id/sm"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:background="@drawable/borderedittext"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/r3"
                android:layout_toRightOf="@id/sm"
                android:id="@+id/verifymobile"
                android:editable="false"
                android:inputType="none"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="10dp"
                android:id="@+id/r4"
                android:layout_below="@id/verifymobile"
                android:background="@color/colorAccent" />

                <Button
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/r4"
                    android:layout_marginTop="40dp"
                    android:text="Proceed"
                    android:textStyle="italic"
                    android:textSize="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/borderedittext"
                    android:id="@+id/proceed"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
