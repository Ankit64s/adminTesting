<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".admin_add_teacher">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="10dp"
                android:background="#E29696" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderedittext"
                android:fontFamily="serif-monospace"
                android:text="New Teacher Entry"
                android:id="@+id/texts1"
                android:textStyle="italic"
                android:textSize="35dp"
                android:textColor="#F39408"
                android:textAlignment="center"
                android:layout_marginTop="70dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@id/texts1"
                android:layout_height="10dp"
                android:background="#E29696" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="20"
                android:background="@drawable/borderedittext"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="Teacher Id"
                android:textSize="22dp"
                android:textStyle="italic"
                android:id="@+id/idteacher"
                android:layout_below="@id/texts1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLength="150"
                android:background="@drawable/borderedittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Teacher's Name"
                android:textSize="22dp"
                android:textStyle="italic"
                android:id="@+id/nameteacher"
                android:layout_below="@id/idteacher"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"
                android:background="@drawable/borderedittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Mobile"
                android:textSize="22dp"
                android:textStyle="italic"
                android:id="@+id/mobteacher"
                android:layout_below="@id/nameteacher"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLength="150"
                android:background="@drawable/borderedittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Address"
                android:textSize="22dp"
                android:textStyle="italic"
                android:id="@+id/addressteacher"
                android:layout_below="@id/mobteacher"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="12"
                android:background="@drawable/borderedittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Teacher's Aadhaar"
                android:textSize="22dp"
                android:textStyle="italic"
                android:id="@+id/adharteacher"
                android:layout_below="@id/addressteacher"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:background="@drawable/borderedittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Salary"
                android:textSize="22dp"
                android:textStyle="italic"
                android:id="@+id/salaryteacher"
                android:layout_below="@id/adharteacher"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLength="150000"
                android:background="@drawable/borderedittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Comments (If Any)"
                android:textSize="22dp"
                android:textStyle="italic"
                android:id="@+id/commentsteacher"
                android:layout_below="@id/salaryteacher"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLength="150000"
                android:background="@drawable/borderedittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Notice (If Any)"
                android:textSize="22dp"
                android:textStyle="italic"
                android:id="@+id/noticeteacher"
                android:layout_below="@id/commentsteacher"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/submitteacher"
                android:layout_below="@id/noticeteacher"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="28dp"
                android:textStyle="italic"
                android:fontFamily="serif-monospace"
                android:text="Submit"
                android:layout_marginTop="40dp"
                android:background="@drawable/borderedittext"
                android:layout_marginBottom="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#F39408"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>